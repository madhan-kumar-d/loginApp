generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @unique @default(autoincrement()) @map("_id") @db.UnsignedInt
  username    String
  email       String   @unique
  phone       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  active      Int      @default(0) @db.TinyInt
  lastLoginAt DateTime
  lastLogin   String
}

model UserLog {
  id Int @id @unique @default(autoincrement()) @db.UnsignedInt
}
